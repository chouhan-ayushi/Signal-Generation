# Import necessary libraries
import numpy as np
import matplotlib.pyplot as plt

# Parameters
fs = 500  # Sampling frequency in Hz
t = np.linspace(0, 1, fs)  # Time vector for 1 second

# Message signal (modulating signal)
fm = 50  # Frequency of message signal in Hz
Am = 1  # Amplitude of message signal
message_signal = Am * np.cos(2 * np.pi * fm * t)

# Carrier signal
fc = 500  # Frequency of carrier signal in Hz
Ac = 1  # Amplitude of carrier signal
carrier_signal = Ac * np.cos(2 * np.pi * fc * t)

# Amplitude Modulation
modulation_index = 0.5  # Modulation index (0 <= modulation_index <= 1)
am_signal = (1 + modulation_index * message_signal) * carrier_signal

# Plot the signals
plt.figure(figsize=(12, 8))

# Plot message signal
plt.subplot(3, 1, 1)
plt.plot(t, message_signal, label="Message Signal (Modulating Signal)", color='b')
plt.title("Message Signal")
plt.xlabel("Time (s)")
plt.ylabel("Amplitude")
plt.grid()
plt.legend()

# Plot carrier signal
plt.subplot(3, 1, 2)
plt.plot(t, carrier_signal, label="Carrier Signal", color='g')
plt.title("Carrier Signal")
plt.xlabel("Time (s)")
plt.ylabel("Amplitude")
plt.grid()
plt.legend()

# Plot AM signal
plt.subplot(3, 1, 3)
plt.plot(t, am_signal, label="AM Signal", color='r')
plt.title("Amplitude Modulated (AM) Signal")
plt.xlabel("Time (s)")
plt.ylabel("Amplitude")
plt.grid()
plt.legend()

# Show the plots
plt.tight_layout()
plt.show()
